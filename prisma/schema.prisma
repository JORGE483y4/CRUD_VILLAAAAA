generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
 nombre String
 telefono String
 num_invitados Int? @default(0)
 invitado Invitado []
}

model Invitado {
  id         Int      @id @default(autoincrement())
  nombre   String
   user_Id  Int

  invitado   User   @relation(fields: [user_Id], references: [id], onDelete: Cascade)

}
